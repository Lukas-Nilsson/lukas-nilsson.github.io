---
import Navigation from '../components/Navigation.astro';
import '../styles/global.css';
import '../styles/enhanced-mode.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { 
  title = 'Lukas Nilsson',
  description = 'Tech creative, founder, and truth seeker building at the intersection of philosophy, technology, and human potential.',
  image = '/favicon.svg'
} = Astro.props;

const siteUrl = 'https://lukas-nilsson.github.io';
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- SEO -->
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(image, siteUrl)} />
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:url" content={canonicalURL} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL(image, siteUrl)} />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <!-- Contact & Social -->
  <meta name="author" content="Lukas Nilsson" />
  <link rel="me" href="https://github.com/Lukas-Nilsson" />
  
  <!-- Theme Script (before render to prevent flash) -->
  <script is:inline>
    // Apply theme and visual mode immediately before page renders
    (function() {
      // Dark mode from system preference
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.setAttribute('data-theme', 'dark');
      }
      
      // Visual mode from localStorage (default or enhanced)
      const visualMode = localStorage.getItem('visual-mode') || 'default';
      document.documentElement.setAttribute('data-visual-mode', visualMode);
    })();
  </script>
</head>
<body>
  <!-- Scroll Progress Indicator -->
  <div class="scroll-progress" id="scroll-progress" aria-hidden="true"></div>
  
  <!-- Page Transition Overlay (hidden, not used) -->
  <div class="page-transition" id="page-transition" aria-hidden="true" style="display: none;"></div>
  
  <Navigation />
  <main>
    <slot />
  </main>

  <script>
    /* =========================================
       SYSTEM PREFERENCE LISTENER (Dark Mode)
       ========================================= */
    
    // Listen to system preference changes
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
      if (e.matches) {
        document.documentElement.setAttribute('data-theme', 'dark');
      } else {
        document.documentElement.removeAttribute('data-theme');
      }
    });
    
    /* =========================================
       HAPTIC FEEDBACK (Touch Devices)
       ========================================= */
    
    function hapticFeedback(intensity: 'light' | 'medium' | 'heavy' = 'light') {
      // Check if Vibration API is supported
      if ('vibrate' in navigator) {
        const patterns = {
          light: 10,
          medium: 20,
          heavy: 30
        };
        navigator.vibrate(patterns[intensity]);
      }
    }
    
    // Add haptic feedback to interactive elements
    function initHaptics() {
      // Buttons
      const buttons = document.querySelectorAll('button, .nav-link, .nav-link-mobile');
      buttons.forEach(button => {
        button.addEventListener('touchstart', () => hapticFeedback('light'), { passive: true });
      });
      
      // Links
      const links = document.querySelectorAll('a[href]');
      links.forEach(link => {
        link.addEventListener('touchstart', () => hapticFeedback('light'), { passive: true });
      });
    }
    
    // Initialize on page load
    document.addEventListener('DOMContentLoaded', initHaptics);
    
    /* =========================================
       MICRO-INTERACTIONS (Button Ripple Effect)
       ========================================= */
    
    function createRipple(event: MouseEvent) {
      const button = event.currentTarget as HTMLElement;
      
      // Create ripple element
      const ripple = document.createElement('span');
      const diameter = Math.max(button.clientWidth, button.clientHeight);
      const radius = diameter / 2;
      
      // Position ripple at click location
      const rect = button.getBoundingClientRect();
      ripple.style.width = ripple.style.height = `${diameter}px`;
      ripple.style.left = `${event.clientX - rect.left - radius}px`;
      ripple.style.top = `${event.clientY - rect.top - radius}px`;
      ripple.classList.add('ripple-effect');
      
      // Remove existing ripples
      const existingRipple = button.querySelector('.ripple-effect');
      if (existingRipple) {
        existingRipple.remove();
      }
      
      button.appendChild(ripple);
      
      // Remove ripple after animation
      setTimeout(() => ripple.remove(), 600);
    }
    
    // Add ripple to buttons
    function initRipples() {
      const buttons = document.querySelectorAll('button, .project-card, .nav-link');
      buttons.forEach(button => {
        button.addEventListener('click', createRipple as EventListener);
      });
    }
    
    document.addEventListener('DOMContentLoaded', initRipples);
    
    /* =========================================
       SCROLL PROGRESS INDICATOR (Safari-style)
       ========================================= */
    const progressBar = document.getElementById('scroll-progress');
    let progressTimeout: number;

    function updateScrollProgress() {
      if (!progressBar) return;

      const windowHeight = document.documentElement.scrollHeight - window.innerHeight;
      const scrolled = window.scrollY;
      const progress = Math.min(scrolled / windowHeight, 1);

      progressBar.style.transform = `scaleX(${progress})`;
      
      // Show progress bar when scrolling
      progressBar.classList.add('visible');

      // Hide after stopping scroll for 1s
      clearTimeout(progressTimeout);
      progressTimeout = window.setTimeout(() => {
        progressBar.classList.remove('visible');
      }, 1000);
    }

    // Only show progress on content pages (not homepage)
    const isContentPage = !window.location.pathname.match(/^\/(#|$)/);
    
    if (isContentPage) {
      window.addEventListener('scroll', updateScrollProgress, { passive: true });
      // Initial call
      updateScrollProgress();
    }

    /* =========================================
       SMOOTH PAGE TRANSITIONS (Nav stays, content fades)
       ========================================= */
    
    // Hide overlay (not needed)
    const transitionOverlay = document.getElementById('page-transition');
    if (transitionOverlay) {
      transitionOverlay.style.display = 'none';
    }
    
    // Fade in main content on page load (nav stays visible)
    window.addEventListener('DOMContentLoaded', () => {
      const main = document.querySelector('main');
      if (main) {
        requestAnimationFrame(() => {
          main.style.transition = 'opacity 150ms cubic-bezier(0.32, 0.72, 0, 1)';
          main.style.opacity = '1';
        });
      }
    });

    // Handle navigation with fast fade (nav stays visible)
    function handlePageExit(e: Event) {
      const target = e.currentTarget as HTMLAnchorElement;
      const href = target.getAttribute('href');
      
      // Only handle internal links
      if (!href || href.startsWith('#') || href.startsWith('http') || href.startsWith('mailto:')) {
        return;
      }

      // Allow modified clicks (new tab)
      const mouseEvent = e as MouseEvent;
      if (mouseEvent.metaKey || mouseEvent.ctrlKey || mouseEvent.shiftKey || mouseEvent.altKey) {
        return;
      }

      e.preventDefault();

      const main = document.querySelector('main');
      if (main) {
        // Fast fade out main content (nav stays visible)
        main.style.transition = 'opacity 100ms cubic-bezier(0.32, 0.72, 0, 1)';
        main.style.opacity = '0.95'; // Very subtle fade, keeps content mostly visible
      }

      // Navigate immediately (fast enough to prevent flash)
      requestAnimationFrame(() => {
        window.location.href = href;
      });
    }

    // Add to all internal links
    document.addEventListener('DOMContentLoaded', () => {
      // Start main at opacity 0 (nav stays visible)
      const main = document.querySelector('main');
      if (main) {
        main.style.opacity = '0';
      }
      
      const links = document.querySelectorAll('a[href^="/"]');
      links.forEach(link => {
        link.addEventListener('click', handlePageExit);
      });
    });
  </script>
</body>
</html>

