---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article class="content-page">
    <div class="content-container">
      <slot />
    </div>
  </article>
</BaseLayout>

<script>
  /* =========================================
     LINK NORMALIZATION
     ========================================= */
  // Fix internal links: lowercase and remove .md extensions
  document.querySelectorAll('.content-page a[href]').forEach((link) => {
    const href = link.getAttribute('href');
    if (href && !href.match(/^(https?:|mailto:|#)/) && !href.startsWith('/_astro')) {
      // Remove .md extension
      let fixed = href.replace(/\.md$/, '');
      // Convert to lowercase and ensure absolute path
      const segments = fixed.split('/').filter(s => s.length > 0);
      fixed = '/' + segments.map(s => s.toLowerCase()).join('/') + '/';
      link.setAttribute('href', fixed);
    }
  });

  /* =========================================
     PROGRESSIVE DISCLOSURE (Collapsible Sections)
     ========================================= */
  
  function initProgressiveDisclosure() {
    const content = document.querySelector('.content-page');
    if (!content) return;

    // Find all h2 elements (section headers)
    const headings = content.querySelectorAll('h2');
    
    headings.forEach((heading) => {
      // Skip if already processed
      if (heading.classList.contains('disclosure-heading')) return;
      
      // Get all elements until next h2 or end
      const sectionContent: Element[] = [];
      let nextElement = heading.nextElementSibling;
      
      while (nextElement && nextElement.tagName !== 'H2') {
        sectionContent.push(nextElement);
        nextElement = nextElement.nextElementSibling;
      }
      
      // Only make collapsible if section has significant content
      if (sectionContent.length > 2) {
        // Mark heading as collapsible
        heading.classList.add('disclosure-heading');
        heading.setAttribute('role', 'button');
        heading.setAttribute('aria-expanded', 'true');
        heading.setAttribute('tabindex', '0');
        
        // Add disclosure icon
        const icon = document.createElement('span');
        icon.className = 'disclosure-icon';
        icon.setAttribute('aria-hidden', 'true');
        icon.textContent = 'â–¼';
        heading.prepend(icon);
        
        // Wrap section content
        const wrapper = document.createElement('div');
        wrapper.className = 'disclosure-content';
        wrapper.setAttribute('aria-hidden', 'false');
        
        sectionContent.forEach(el => {
          wrapper.appendChild(el);
        });
        
        heading.after(wrapper);
        
        // Toggle function
        const toggle = () => {
          const isExpanded = heading.getAttribute('aria-expanded') === 'true';
          heading.setAttribute('aria-expanded', String(!isExpanded));
          wrapper.setAttribute('aria-hidden', String(isExpanded));
          
          if (isExpanded) {
            wrapper.style.maxHeight = '0';
            icon.style.transform = 'rotate(-90deg)';
          } else {
            wrapper.style.maxHeight = wrapper.scrollHeight + 'px';
            icon.style.transform = 'rotate(0deg)';
          }
        };
        
        // Click handler
        heading.addEventListener('click', toggle);
        
        // Keyboard handler
        heading.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            toggle();
          }
        });
      }
    });
  }

  // Run on page load
  document.addEventListener('DOMContentLoaded', initProgressiveDisclosure);
</script>

<style>
  .content-page {
    padding: var(--space-2xl) 0;
  }

  .content-container {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 0 var(--space-md);
  }

  /* Typography styles for markdown content */
  .content-page :global(h1) {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-lg);
  }

  .content-page :global(h2) {
    font-size: var(--text-2xl);
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
  }

  .content-page :global(h3) {
    font-size: var(--text-xl);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-sm);
  }

  .content-page :global(p) {
    margin-bottom: var(--space-md);
    line-height: 1.75;
  }

  .content-page :global(ul),
  .content-page :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .content-page :global(li) {
    margin-bottom: var(--space-xs);
    line-height: 1.7;
  }

  .content-page :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: var(--space-xl) 0;
  }

  .content-page :global(blockquote) {
    border-left: 3px solid var(--color-accent);
    padding-left: var(--space-md);
    margin: var(--space-lg) 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .content-page :global(code) {
    background: var(--color-border);
    padding: 0.125rem 0.375rem;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .content-page :global(pre) {
    background: var(--color-border);
    padding: var(--space-md);
    border-radius: 6px;
    overflow-x: auto;
    margin-bottom: var(--space-md);
  }

  .content-page :global(pre code) {
    background: none;
    padding: 0;
  }

  /* Apple-style link interactions */
  .content-page :global(a) {
    color: var(--color-accent);
    text-decoration: none;
    position: relative;
    transition: color 200ms cubic-bezier(0.32, 0.72, 0, 1),
                opacity 200ms cubic-bezier(0.32, 0.72, 0, 1);
  }

  .content-page :global(a::after) {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--color-accent);
    opacity: 0.3;
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 200ms cubic-bezier(0.32, 0.72, 0, 1),
                opacity 200ms cubic-bezier(0.32, 0.72, 0, 1);
  }

  .content-page :global(a:hover::after) {
    transform: scaleX(1);
    opacity: 1;
  }

  .content-page :global(a:active) {
    opacity: 0.6;
    transform: scale(0.98);
  }

  .content-page :global(a:focus-visible) {
    outline: 3px solid var(--color-accent);
    outline-offset: 4px;
    border-radius: 2px;
  }

  .content-page :global(strong) {
    font-weight: 600;
    color: var(--color-text);
  }

  .content-page :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: var(--space-lg) 0;
  }

  /* =========================================
     PROGRESSIVE DISCLOSURE STYLES
     ========================================= */
  
  .content-page :global(.disclosure-heading) {
    cursor: pointer;
    user-select: none;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    transition: color 200ms cubic-bezier(0.32, 0.72, 0, 1);
  }

  .content-page :global(.disclosure-heading:hover) {
    color: var(--color-accent);
  }

  .content-page :global(.disclosure-heading:focus-visible) {
    outline: 3px solid var(--color-accent);
    outline-offset: 4px;
    border-radius: 4px;
  }

  .content-page :global(.disclosure-icon) {
    font-size: 0.7em;
    transition: transform 300ms cubic-bezier(0.32, 0.72, 0, 1);
    display: inline-block;
    color: var(--color-accent);
  }

  .content-page :global(.disclosure-content) {
    overflow: hidden;
    transition: max-height 400ms cubic-bezier(0.32, 0.72, 0, 1),
                opacity 300ms cubic-bezier(0.32, 0.72, 0, 1);
    max-height: 10000px; /* Large initial value */
  }

  .content-page :global(.disclosure-content[aria-hidden="true"]) {
    max-height: 0;
    opacity: 0.6;
  }
</style>

