---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <div class="hero">
    <div class="hero-container">
      <h1 class="hero-title" aria-label="Lukas Nilsson">
        <span class="hero-title-line" data-animate>Lukas</span>
        <span class="hero-title-line" data-animate>Nilsson</span>
      </h1>
      <div class="hero-conversation" data-animate>
        <p class="conversation-prompt">
          "Based on everything you know about me, who am I in one sentence"
        </p>
        <p class="conversation-response">
          <span class="chatgpt-label">ChatGPT</span> — "You are a visionary builder—philosopher, artist, and teacher—who uses story, technology, and disciplined optimism to inspire human agency and meaning by revealing the beauty in the world."
        </p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .hero {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    padding: var(--space-xl) 0;
  }

  .hero-container {
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--space-md);
  }

  .hero-title {
    font-size: clamp(3rem, 10vw, 8rem);
    font-weight: 700;
    line-height: 0.95;
    margin-bottom: var(--space-lg);
    color: var(--color-text);
  }

  .hero-title-line {
    display: block;
  }

  .hero-conversation {
    max-width: 700px;
    margin-top: var(--space-xl);
  }

  .conversation-prompt {
    font-size: var(--text-base);
    line-height: 1.5;
    color: var(--color-text-muted);
    font-style: italic;
    margin-bottom: var(--space-md);
    opacity: 0.8;
  }

  .conversation-response {
    font-size: var(--text-lg);
    line-height: 1.6;
    color: var(--color-text);
  }

  .chatgpt-label {
    font-weight: 600;
    color: var(--color-accent);
  }

  /* Responsive adjustments */
  @media (min-width: 768px) {
    .hero-title {
      margin-bottom: var(--space-xl);
    }

    .conversation-prompt {
      font-size: var(--text-lg);
    }

    .conversation-response {
      font-size: var(--text-xl);
    }
  }

  @media (min-width: 1024px) {
    .hero-conversation {
      max-width: 800px;
    }
  }

  /* Apple-style staggered entrance animations */
  [data-animate] {
    opacity: 0;
    transform: translateY(20px);
  }

  @media (prefers-reduced-motion: no-preference) {
    [data-animate] {
      animation: fadeInUp 600ms cubic-bezier(0.32, 0.72, 0, 1) forwards;
    }

    .hero-title-line:first-child {
      animation-delay: 100ms;
    }

    .hero-title-line:last-child {
      animation-delay: 200ms;
    }

    .hero-conversation {
      animation-delay: 400ms;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    [data-animate] {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }

  /* Interactive hover state for title */
  @media (hover: hover) {
    .hero-title-line {
      display: inline-block;
      transition: transform 300ms cubic-bezier(0.32, 0.72, 0, 1);
    }

    .hero-title-line:hover {
      transform: scale(1.02);
      color: var(--color-accent);
    }
  }
</style>

