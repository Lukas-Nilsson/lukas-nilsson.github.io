---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <div class="hero">
    <div class="hero-container">
      <h1 class="hero-title" aria-label="Lukas Nilsson">
        <span class="hero-title-line" data-animate>Lukas</span>
        <span class="hero-title-line" data-animate>Nilsson</span>
      </h1>
      <div class="chat-container" data-animate aria-label="Chat transcript">
        <!-- User message -->
        <div class="chat-message user">
          <div class="avatar user-avatar" aria-hidden="true">LN</div>
          <div class="message">
            <div class="message-content">"Based on everything you know about me, who am I in one sentence"</div>
          </div>
        </div>

        <!-- Assistant message -->
        <div class="chat-message assistant">
          <div class="avatar assistant-avatar" aria-hidden="true">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 3l2.6 1.5L18 6l.5 3 .5 3-2 2-2 2-3 .5-3 .5-2.5-1.5L6 15l-.5-3L6 9l2-2 2-2 2-.5z" opacity="0.9"/>
            </svg>
          </div>
          <div class="message">
            <div class="message-content">You are a visionary builder—philosopher, artist, and teacher—who uses story, technology, and disciplined optimism to inspire human agency and meaning by revealing the beauty in the world.</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .hero {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    padding: var(--space-xl) 0;
  }

  .hero-container {
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--space-md);
  }

  .hero-title {
    font-size: clamp(3rem, 10vw, 8rem);
    font-weight: 700;
    line-height: 0.95;
    margin-bottom: var(--space-lg);
    color: var(--color-text);
  }

  .hero-title-line {
    display: block;
  }

  .chat-container {
    margin-top: var(--space-xl);
    max-width: 800px;
    border: 1px solid var(--color-border);
    border-radius: 16px;
    overflow: hidden;
    background: transparent;
  }

  .chat-message {
    display: grid;
    grid-template-columns: 36px 1fr;
    gap: 12px;
    align-items: flex-start;
    padding: 14px 16px;
  }

  .chat-message + .chat-message {
    border-top: 1px solid var(--color-border);
  }

  /* Alternating background similar to ChatGPT */
  .chat-message.assistant {
    background: rgba(0, 0, 0, 0.03);
  }

  [data-theme="dark"] .chat-message.assistant {
    background: rgba(255, 255, 255, 0.03);
  }

  .avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.7rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .user-avatar {
    background: var(--color-surface-elevated);
    color: var(--color-text);
  }

  [data-theme="dark"] .user-avatar {
    background: var(--color-surface);
  }

  .assistant-avatar {
    background: linear-gradient(135deg, #10b981 0%, #22d3ee 100%);
    color: white;
  }

  .message-content {
    color: var(--color-text);
    line-height: 1.7;
    font-size: var(--text-base);
  }

  /* Responsive adjustments */
  @media (min-width: 768px) {
    .hero-title {
      margin-bottom: var(--space-xl);
    }

    .message-content {
      font-size: var(--text-lg);
    }
  }

  @media (min-width: 1024px) {
    .chat-container {
      max-width: 880px;
    }
  }

  /* Apple-style staggered entrance animations */
  [data-animate] {
    opacity: 0;
    transform: translateY(20px);
  }

  @media (prefers-reduced-motion: no-preference) {
    [data-animate] {
      animation: fadeInUp 600ms cubic-bezier(0.32, 0.72, 0, 1) forwards;
    }

    .hero-title-line:first-child {
      animation-delay: 100ms;
    }

    .hero-title-line:last-child {
      animation-delay: 200ms;
    }

    .chat-container {
      animation-delay: 400ms;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    [data-animate] {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }

  /* Interactive hover state for title */
  @media (hover: hover) {
    .hero-title-line {
      display: inline-block;
      transition: transform 300ms cubic-bezier(0.32, 0.72, 0, 1);
    }

    .hero-title-line:hover {
      transform: scale(1.02);
      color: var(--color-accent);
    }
  }
</style>

